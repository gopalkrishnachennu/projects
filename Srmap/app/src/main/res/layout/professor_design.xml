<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/profcard"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:elevation="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        android:fadingEdgeLength="10dp"
        >
        <LinearLayout
            android:id="@+id/proffcard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="match_parent"
               >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_gravity="center"
                    android:id="@+id/profimg"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="15sp"
                    android:src="@drawable/fogetpassword"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="10dp"
                    android:text="Srm University"
                    android:textSize="20sp"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginStart="10dp"
                    />
                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Srm University ,Heloo Im gopalakrishna ,computer science graduate ,call NO:8686588528 "
                   android:lines="2"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginStart="10dp"

                    />
                <TextView
                    android:id="@+id/seconddescription"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="This is the card view"
                    android:layout_marginStart="10dp"
                    android:textStyle="italic"
                    android:maxLength="80"
                    android:maxLines="2"
                    />
                <TextView
                    android:id="@+id/stamp"
                    android:layout_width="match_parent"
                    android:layout_height="20sp"
                    android:gravity="end"
                    android:layout_marginEnd="30dp"
                    android:text="#DIA team"
                    android:textStyle="bold"
                    android:textColor="#F63939"/>

            </LinearLayout>










        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>
