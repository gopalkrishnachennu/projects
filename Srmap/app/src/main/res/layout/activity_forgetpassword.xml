<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".Forgetpassword">

    <ImageView
        android:id="@+id/forgetimage"
        android:layout_width="match_parent"
        android:layout_height="363dp"
        android:layout_marginTop="20dp"
        android:fitsSystemWindows="true"
        android:src="@drawable/fogetpassword"></ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forget Password"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:gravity="start"
        android:textStyle="bold"
        android:layout_marginLeft="10dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="It's Okay ! Reset Your Password"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:gravity="start"
        android:textStyle="bold"
        android:layout_marginLeft="10dp" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Registered SRM Mail"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:errorEnabled="true"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <EditText
            android:id="@+id/forgetemail"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/sendlink"
        android:onClick="sendlink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:text="Send Link"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="10dp"
        android:fitsSystemWindows="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textColor="@color/colorPrimary"
            android:text="Back to login >>"/>
        <TextView
            android:id="@+id/forgetlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textColor="#FFA500"
            android:text="Login"
            android:textStyle="bold"
            android:textSize="15sp"/>

    </LinearLayout>


</LinearLayout>