<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard.Home">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:id="@+id/dashboardtop"
                        android:src="@drawable/ic_info"
                        android:elevation="2dp"
                        android:layout_alignParentRight="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Get A Way"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:elevation="10dp"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center_horizontal"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:cardElevation="15dp"
                        app:cardCornerRadius="15dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                           >
                           <com.denzcoskun.imageslider.ImageSlider
                               android:id="@+id/slideimage"
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:layout_margin="10dp"
                               app:iss_auto_cycle="true"
                               app:iss_delay="0"
                               app:iss_period="3000"
                               app:iss_corner_radius="20"
                               app:iss_error_image="@drawable/nopic"
                               />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Explore things to SRMAP"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:gravity="center_horizontal" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_margin="5dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="4dp"
                            android:layout_weight="1"

                            android:src="@drawable/it"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="IT Support"
                            android:textStyle="normal"
                            android:layout_weight="4"
                            android:textSize="10sp"
                            android:gravity="center_horizontal" />
                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:background="@color/colorPrimary"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_margin="5dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:src="@drawable/calender"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Academic"
                            android:textStyle="normal"
                            android:layout_weight="4"
                            android:textSize="10sp"
                            android:gravity="center_horizontal" />
                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:background="@color/colorPrimary"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_margin="5dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:src="@drawable/mail"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Notifications"
                            android:textStyle="normal"
                            android:layout_weight="4"
                            android:textSize="10sp"
                            android:gravity="center_horizontal" />
                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:background="@color/colorPrimary"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_margin="5dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:src="@drawable/select"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Course"
                            android:textStyle="normal"
                            android:layout_weight="4"
                            android:textSize="10sp"
                            android:gravity="center_horizontal" />
                    </LinearLayout>



                </LinearLayout>

                <View
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#999999"
                    android:outlineSpotShadowColor="@color/colorPrimary"
                    android:fitsSystemWindows="true"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:text="Category"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginTop="5dp"
                            android:layout_margin="10dp"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal">



                            <LinearLayout
                                android:id="@+id/hostel"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/white">
                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:outlineSpotShadowColor="@color/colorPrimaryDark"
                                        >

                                        <ImageView
                                            android:layout_width="50dp"
                                            android:layout_height="57dp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/ic_hotel" />
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="1dp"
                                    android:layout_weight="2">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Hostel"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        android:textColor="#000000"
                                        android:textAlignment="center"/>

                                </LinearLayout>

                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/bus"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"

                                        android:outlineSpotShadowColor="@color/colorPrimaryDark"
                                        >
                                        <ImageView
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/ic_bus"/>
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="1dp"
                                    android:layout_weight="2">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Bus"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        android:textColor="#000000"
                                        android:textAlignment="center"/>

                                </LinearLayout>

                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/own"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"


                                        android:outlineSpotShadowColor="@color/colorPrimaryDark"
                                        >
                                        <ImageView
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/ic_bike"
                                            android:scaleType="fitCenter"/>
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="1dp"
                                    android:layout_weight="2">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Own"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        android:textColor="#000000"
                                        android:textAlignment="center"/>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


               <LinearLayout
                   android:layout_margin="5dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Quick Links"
                       android:textStyle="bold"
                       android:textSize="15sp"
                       android:textColor="@color/colorPrimary"/>

                   <LinearLayout
                       android:id="@+id/announcements"
                       android:layout_marginTop="15dp"
                       android:layout_width="match_parent"
                       android:layout_height="65dp"
                       android:orientation="horizontal">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:weightSum="3"
                           android:elevation="30dp"
                           android:background="@drawable/announcementa_gradient">

                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent">
                               <de.hdodenhof.circleimageview.CircleImageView
                                   android:src="@drawable/ic_announcement"
                                   android:layout_marginStart="10dp"
                                   android:layout_weight="-1"
                                   android:layout_width="60dp"
                                   android:layout_height="60dp"
                                   />
                               <LinearLayout
                                   android:layout_marginStart="20dp"
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:layout_weight="1"
                                   android:weightSum="3"
                                   android:orientation="vertical">
                                   <TextView
                                       android:layout_gravity="center"
                                       android:layout_width="match_parent"
                                       android:layout_height="30dp"
                                       android:text="Announcements"
                                       android:textStyle="bold"
                                       android:textColor="@color/white"
                                       android:textSize="20sp"
                                      />
                                   <TextView
                                       android:id="@+id/announcementmarquee"
                                       android:layout_width="match_parent"
                                       android:layout_height="30dp"
                                       android:text="hello"
                                       android:singleLine="true"
                                       android:scrollHorizontally="true"
                                       android:scrollbarStyle="insideInset"
                                       android:textSize="15sp"

                                       android:textColor="@color/white"/>


                               </LinearLayout>
                           </LinearLayout>

                       </LinearLayout>



                   </LinearLayout>
                   <LinearLayout
                       android:id="@+id/nenws"
                       android:layout_marginTop="15dp"
                       android:layout_width="match_parent"
                       android:layout_height="65dp"
                       android:orientation="horizontal">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:weightSum="3"
                           android:elevation="30dp"
                           android:background="@drawable/news_gradient">



                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent">
                               <de.hdodenhof.circleimageview.CircleImageView
                                   android:src="@drawable/ic_news"
                                   android:layout_marginStart="10dp"
                                   android:layout_weight="-1"
                                   android:layout_width="60dp"
                                   android:layout_height="60dp"
                                   />
                               <LinearLayout
                                   android:layout_marginStart="20dp"
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:layout_weight="1"
                                   android:weightSum="3"
                                   android:orientation="vertical">
                                   <TextView
                                       android:layout_gravity="center"
                                       android:layout_width="match_parent"
                                       android:layout_height="30dp"
                                       android:text="News"
                                       android:textStyle="bold"
                                       android:textColor="@color/white"
                                       android:textSize="20sp"
                                       />
                                   <TextView
                                       android:id="@+id/newsmarquee"
                                       android:layout_width="match_parent"
                                       android:layout_height="30dp"
                                       android:text="hello"
                                       android:singleLine="true"
                                       android:scrollHorizontally="true"
                                       android:scrollbarStyle="insideInset"
                                       android:textSize="15sp"

                                       android:textColor="@color/white"/>


                               </LinearLayout>
                           </LinearLayout>

                       </LinearLayout>



                   </LinearLayout>
                   <LinearLayout
                       android:id="@+id/campuslife"
                       android:layout_marginTop="15dp"
                       android:layout_width="match_parent"
                       android:layout_height="65dp"
                       android:orientation="horizontal">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:weightSum="3"
                           android:elevation="30dp"
                           android:background="@drawable/campus_gradient">
                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent">
                               <de.hdodenhof.circleimageview.CircleImageView
                                   android:src="@drawable/ic_campuslife"
                                   android:layout_marginStart="10dp"
                                   android:layout_weight="-1"
                                   android:layout_width="60dp"
                                   android:layout_height="60dp"
                                   />
                               <LinearLayout
                                   android:layout_marginStart="20dp"
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:layout_weight="1"
                                   android:weightSum="3"
                                   android:orientation="vertical">
                                   <TextView
                                       android:layout_gravity="center"
                                       android:layout_width="match_parent"
                                       android:layout_height="30dp"
                                       android:text="Campus Life"
                                       android:textStyle="bold"
                                       android:textColor="@color/white"
                                       android:textSize="20sp"
                                       />
                                   <TextView
                                       android:id="@+id/camuslifemarquee"
                                       android:layout_width="match_parent"
                                       android:layout_height="30dp"
                                       android:text="hello"
                                       android:singleLine="true"
                                       android:scrollHorizontally="true"
                                       android:scrollbarStyle="insideInset"
                                       android:textSize="15sp"

                                       android:textColor="@color/white"/>


                               </LinearLayout>
                           </LinearLayout>

                       </LinearLayout>



                   </LinearLayout>
                   <LinearLayout
                       android:id="@+id/contact"
                       android:layout_marginTop="15dp"
                       android:layout_width="match_parent"
                       android:layout_height="65dp"
                       android:orientation="horizontal">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:weightSum="3"
                           android:elevation="30dp"
                           android:background="@drawable/contact_gradient">



                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent">
                               <de.hdodenhof.circleimageview.CircleImageView
                                   android:src="@drawable/ic_contact"
                                   android:layout_marginStart="10dp"
                                   android:layout_weight="-1"
                                   android:layout_width="60dp"
                                   android:layout_height="60dp"
                                   />
                               <LinearLayout
                                   android:layout_marginStart="20dp"
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:layout_weight="1"
                                   android:weightSum="3"
                                   android:orientation="vertical">
                                   <TextView
                                       android:layout_gravity="center"
                                       android:layout_width="match_parent"
                                       android:layout_height="30dp"
                                       android:text="Contact"
                                       android:textStyle="bold"
                                       android:textColor="@color/white"
                                       android:textSize="20sp"
                                       />
                                   <TextView
                                       android:id="@+id/contactmarquee"
                                       android:layout_width="match_parent"
                                       android:layout_height="30dp"
                                       android:text="hello"
                                       android:singleLine="true"
                                       android:scrollHorizontally="true"
                                       android:scrollbarStyle="insideInset"
                                       android:textSize="15sp"

                                       android:textColor="@color/white"/>


                               </LinearLayout>
                           </LinearLayout>

                       </LinearLayout>



                   </LinearLayout>
                   <LinearLayout
                       android:id="@+id/about"
                       android:layout_marginTop="15dp"
                       android:layout_width="match_parent"
                       android:layout_height="65dp"
                       android:orientation="horizontal">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:weightSum="3"
                           android:elevation="30dp"
                           android:background="@drawable/about_gradient">



                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent">
                               <de.hdodenhof.circleimageview.CircleImageView
                                   android:src="@drawable/ic_info"
                                   android:layout_marginStart="10dp"
                                   android:layout_gravity="center"
                                   android:layout_weight="-1"
                                   android:layout_width="50dp"
                                   android:layout_height="50dp"
                                   />
                               <LinearLayout
                                   android:layout_marginStart="20dp"
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:layout_weight="1"
                                   android:weightSum="3"
                                   android:orientation="vertical">
                                   <TextView
                                       android:layout_gravity="center"
                                       android:layout_width="match_parent"
                                       android:layout_height="30dp"
                                       android:text="About"
                                       android:textStyle="bold"
                                       android:textColor="@color/white"
                                       android:textSize="20sp"
                                       />
                                   <TextView
                                       android:id="@+id/aboutmarquee"
                                       android:layout_width="match_parent"
                                       android:layout_height="30dp"
                                       android:text="hello"
                                       android:singleLine="true"
                                       android:scrollHorizontally="true"
                                       android:scrollbarStyle="insideInset"
                                       android:textSize="15sp"

                                       android:textColor="@color/white"/>


                               </LinearLayout>
                           </LinearLayout>

                       </LinearLayout>



                   </LinearLayout>




               </LinearLayout>



















            </LinearLayout>


        </ScrollView>

    </LinearLayout>

    <com.ismaeldivita.chipnavigation.ChipNavigationBar
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cnb_menuResource="@menu/menu_navigation"
        android:layout_alignParentBottom="true"
        android:background="@color/dashboard"
        app:cnb_unselectedColor="@color/colorPrimary"
        app:cnb_radius="8dp"
        app:cnb_orientationMode="horizontal"
        android:layout_margin="15dp"
        android:elevation="8dp"
        />

</RelativeLayout>